@model Online_school.Models.Category


<h2>Adaugare Categorie</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Categories", method: FormMethod.Post))
{

    @Html.Label("Category_Name", "Category Name")
    <br />

    @Html.TextBox("Category_Name", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Category_Name, null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Add Category</button>

}

