@model Online_school.Models.Message


@{
    ViewBag.Title = "Edit";
}

<h2>Edit text</h2>
<br />


@using (Html.BeginForm(controllerName: "Messages", actionName: "Edit", 
       method: FormMethod.Post, routeValues: new { id = Model.MessageId }))

{
    @Html.Label("Content", "Content")

    <br />

    @Html.Editor("Content", new { @class = "form-control" })
    <br />

    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })

    <br /><br />

    <button class="btn  btn-primary" type="submit">Edit text</button>

}

