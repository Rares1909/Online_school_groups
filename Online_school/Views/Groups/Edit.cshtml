@model Online_school.Models.Group

<h2 class="text-center mt-5">Edit group</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3"> 

@using (Html.BeginForm(controllerName: "Groups", actionName: "Edit", 
       method: FormMethod.Post, routeValues: new { id = Model.GroupId }))

{
    @Html.Label("Group_Name", "Group Name")

    <br />

    @Html.EditorFor(m=>m.Group_Name, new { htmlAttributes = new { @class = "form-control" } })

    <br />

    @Html.ValidationMessageFor(m=>m.Group_Name, "", new { @class = "text-danger" })

    <br /><br />

    @Html.Label("Description", "Description")

    <br />

    @Html.EditorFor(m=>m.Description, new { htmlAttributes = new { @class = "form-control" } })

    <br />

    @Html.ValidationMessageFor(m=>m.Description, null, new { @class = "text-danger" })

    <br /><br />

    <label>Select Category</label>
    @Html.DropDownListFor(m=>m.CategoryId, new SelectList(Model.Categ, "Value", "Text"),
    "Selectati categoria", new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.CategoryId, null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn  btn-primary" type="submit">Editeaza grupul</button>

}
</div>
</div>
</div>
